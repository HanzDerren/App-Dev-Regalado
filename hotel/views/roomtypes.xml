<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree/List View -->
    <record id="view_hotel_roomtypes_tree" model="ir.ui.view">
        <field name="name">hotel.roomtypes.tree</field>
        <field name="model">hotel.roomtypes</field>
        <field name="arch" type="xml">
            <list string="Room Types">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hotel_roomtypes_form" model="ir.ui.view">
        <field name="name">hotel.roomtypes.form</field>
        <field name="model">hotel.roomtypes</field>
        <field name="arch" type="xml">
            <form string="Room Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>

                    <notebook>
                        <!-- Daily Charges Page -->
                        <page string="Daily Charges">
                            <field name="daily_charge_ids">
                                <list editable="bottom">
                                    <field name="charge_id"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>

                        <!-- Images Page -->
                        <page string="Images">
                            <group>
                                <field name="photo_bed" widget="image"/>
                                <field name="photo_restroom" widget="image"/>
                            </group>
                        </page>

                        <!-- Rooms Page -->
                        <page string="Rooms">
                            <field name="room_ids">
                                <list readonly="1">
                                    <field name="name"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_hotel_roomtypes" model="ir.actions.act_window">
        <field name="name">Room Types</field>
        <field name="res_model">hotel.roomtypes</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_hotel_roomtypes_tree"/>  <!-- Explicitly reference the tree view -->
    </record>


    <!-- Menu Item -->
    <menuitem id="menu_hotel_roomtypes"
              name="Room Types"
              parent="menu_hotel_masterlists"
              action="action_hotel_roomtypes"
              sequence="3"/>
</odoo>
